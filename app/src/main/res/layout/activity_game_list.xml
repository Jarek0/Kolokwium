<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="pollub.edu.pl.kolokwium.ListOfGames">

    <TextView
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:layout_height="59dp"
        android:textSize="25dp"
        android:forceHasOverlappingRendering="false"
        android:gravity="center"
        android:text="-=[Zawartosc bazy]=-"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_above="@+id/addGameTV"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:id="@+id/addGameTV"
        android:layout_width="380dp"
        android:layout_height="59dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:forceHasOverlappingRendering="false"
        android:gravity="center"
        android:text="[kliknij, aby dodac nowa gre]"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_above="@+id/sortByTitleButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/sortByTitleButton"
        android:layout_width="333dp"
        android:layout_height="53dp"
        android:text="SORTOWANIE PO TYTULE"
        tools:layout_editor_absoluteY="442dp"
        tools:layout_editor_absoluteX="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>